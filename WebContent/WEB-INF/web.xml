<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>BionicEELibrary</display-name>
	<welcome-file-list>
		<welcome-file>/faces/pages/guest/index.xhtml</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>bootstrap</param-value>
	</context-param>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<display-name>Web Security</display-name>
		<web-resource-collection>
			<web-resource-name>rich</web-resource-name>
			<url-pattern>/pages/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
			<role-name>librarian</role-name>
			<role-name>reader</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>Admin Web Security</display-name>
		<web-resource-collection>
			<web-resource-name>rich_admin</web-resource-name>
			<url-pattern>/pages/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>Librarian Web Security</display-name>
		<web-resource-collection>
			<web-resource-name>rich_librarian</web-resource-name>
			<url-pattern>/pages/librarian/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>librarian</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>Reader Web Security</display-name>
		<web-resource-collection>
			<web-resource-name>rich_reader</web-resource-name>
			<url-pattern>/pages/reader/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>reader</role-name>
		</auth-constraint>
	</security-constraint>
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>libAuth</realm-name>
		<form-login-config>
			<form-login-page>/pages/guest/index.xhtml</form-login-page>
			<form-error-page>/pages/guest/index.xhtml</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<role-name>reader</role-name>
	</security-role>
	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<role-name>librarian</role-name>
	</security-role>
</web-app>